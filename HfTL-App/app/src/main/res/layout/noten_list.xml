<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/grau04"

    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:gravity="center_vertical|center_horizontal"
    android:visibility="visible" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/grau06"
        android:id="@+id/wrapper_semester" >
        <bkmi.de.hftl_app.help.Typefaces.TeleGrotHalb
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notenlist_semester"
            android:textColor="@color/schwarz"
            android:textSize="20sp"
            android:padding="4dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/wrapper_notencontent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grau06"
        android:paddingBottom="1dp" >

        <LinearLayout
            android:id="@+id/wrapper_noteninner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grau04"
            android:paddingBottom="1dp"
            android:layout_marginBottom="0dp" >

            <LinearLayout
                android:id="@+id/wrapper_headline"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp" >

                <bkmi.de.hftl_app.help.Typefaces.TeleGrotHalb
                    android:id="@+id/notenlist_fach"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="8dp"
                    android:text="Grundlagen Informatik 2"
                    android:textSize="18sp"
                    android:textColor="@color/schwarz" />

                <bkmi.de.hftl_app.help.Typefaces.TeleGrotNorm
                    android:id="@+id/notenlist_versuch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="Versuch 1"
                    android:textSize="15sp"
                    android:textColor="@color/schwarz" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/wrapper_note"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:padding="4dp" >

                <bkmi.de.hftl_app.help.Typefaces.TeleGrotHalb
                    android:id="@+id/notenlist_note"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5,0"
                    android:textSize="20sp"
                    android:textColor="@color/schwarz" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>