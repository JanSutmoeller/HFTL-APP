<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"

    android:background="@color/grau04"
    android:gravity="center_vertical|center_horizontal"
    android:padding="8dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D0D0D0"
        android:paddingBottom="1dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grau04"
        android:paddingBottom="1dp"
        android:layout_marginBottom="0dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        >

        <TextView android:id="@+id/noten_fach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Grundlagen Informatik 2"
            android:textSize="18sp"
            android:textColor="@color/schwarz"
            />
        <TextView android:id="@+id/noten_versuch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:text="Versuch 1"
            android:textSize="15sp"
            android:textColor="@color/schwarz"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:padding="4dp"
        >

        <TextView
            android:id="@+id/noten_note"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5,0"
            android:textSize="20sp"
            android:textColor="@color/schwarz"
            />
    </LinearLayout>

    </LinearLayout>


    </LinearLayout>
</LinearLayout>